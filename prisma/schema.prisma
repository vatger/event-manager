datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  cid       String   @unique
  name      String
  rating    String
  role      Role     @default(CONTROLLER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  signups   EventSignup[]
}

model Event {
  id              Int        @id @default(autoincrement())
  name            String
  description     String
  bannerUrl       String
  startTime       DateTime
  endTime         DateTime
  airports        Json       // Array of ICAO codes
  signupDeadline  DateTime?
  staffedStations Json?       // Array of Callsigns
  status          EventStatus @default(PLANNING)
  createdById     Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  signups   EventSignup[]
  documents EventDocument[]
}

model EventSignup {
  id                Int       @id @default(autoincrement())
  eventId           Int
  userId            Int
  availability      Json      // Array of times e.g. ["18:00Z", "18:30Z"]
  endorsement String?
  preferredStations Json      // Array of stations e.g. ["EDDM_TWR"]
  notes             String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  event Event @relation(fields: [eventId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}

model EventDocument {
  id        Int           @id @default(autoincrement())
  eventId   Int
  name      String
  type      DocumentType
  url       String
  createdAt DateTime @default(now())

  event Event @relation(fields: [eventId], references: [id])
}

enum Role {
  CONTROLLER
  ADMIN
}

enum EventStatus {
  PLANNING
  SIGNUP_OPEN
  PLAN_UPLOADED
  COMPLETED
}

enum DocumentType {
  PLAN
  BRIEFING
  CHART
  OTHER
}
